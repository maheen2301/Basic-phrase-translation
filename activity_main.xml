<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button

            android:id="@+id/button1"
            android:alpha="2"
            android:backgroundTint="#E8AAAA"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="doyouspeakenglish"
            android:text="@string/do_you_speak_n_english"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1B1616"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button

            android:id="@+id/button2"
            android:backgroundTint="#9B6D6D"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="goodevening"
            android:text="@string/good_evening"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button

            android:id="@+id/button3"
            android:backgroundTint="#F44336"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="hello"
            android:text="@string/hello"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button

            android:id="@+id/button4"
            android:backgroundTint="#CDDC39"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="howareyou"
            android:text="@string/how_are_you"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button

            android:id="@+id/button5"
            android:backgroundTint="#2196F3"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="ilivein"
            android:text="@string/i_live_in"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button

            android:id="@+id/button6"
            android:backgroundTint="#E91E63"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="mynameis"
            android:text="@string/my_name_is"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button

            android:id="@+id/button7"
            android:backgroundTint="#9C27B0"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="please"
            android:text="@string/please"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button

            android:id="@+id/button8"
            android:backgroundTint="#009688"
            android:gravity="fill"
            android:onClick="playPhrase"
            android:tag="welcome"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>